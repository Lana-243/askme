<div class="user-box">
  <h2 class="title-lg mt-lg"><%= @user.name %></h2>
  <p class="text-bold mt mb-lg">@<%= display_nickname(@user) %></p>

  <div class="mt">
    <%= render partial: 'users/user_avatar', locals: {user: @user} %>
  </div>

  <% if current_user == @user %>
    <p class="mt mb-lg">
      <%= link_to fa_icon('pencil'), edit_user_path(@user) %>
    </p>
  <% end %>
</div>


<div class="container">
  <%= link_to "Ask me", new_question_path(user_id: @user.id),
    class: "button button-yellow" %>

  <p class="mt">
    <%= render'questions/form', question: @question %>
  </p>
</div>

<div class="container mt-sm">
  <h2 class="title-lg mb">
    <% @questions.count %>
    <%= inclination(@questions.count, "Question", "Questions") %>
  </h2>
</div>

<% @questions.each do |question| %>
  <div class="mt-sm container" >
    <%= render question %>
  </div>
<% end %>

