<div class="user-box">
  <h2 class="title-lg mt-lg"><%= sanitize @user.name %></h2>
  <p class="text-bold mt mb-lg"><%= sanitize display_nickname(@user) %></p>
  <div class="mt">
    <%= render partial: 'users/user_avatar', locals: {user: @user} %>
  </div>

  <% if current_user == @user %>
    <p class="mt mb-lg">
      <%= link_to fa_icon('pencil'), edit_user_path(@user) %>
    </p>
  <% end %>
</div>

<% if @questions.any? %>
  <div class="container">
    <p class="mt">
      <%= render'questions/form', question: @question %>
    </p>
  </div>

  <div class="container mt-sm">
    <h2 class="title-lg mb">
      <% @questions.count %>
      <%= inclination(@questions.count, "Question", "Questions") %>
    </h2>
  </div>

  <% @questions.each do |question| %>
    <div class="mt-sm container" >
      <%= render question %>
    </div>
  <% end %>
<% else %>
  <%= render partial: 'no_questions', locals: {user: @user} %>
<% end %>

