<div class="container">
  <h2 class="title-lg mb">New question</h2>
  <p class="mb"> for <%= link_to "@#{@user.nickname}", user_path(@user) %></p>

  <% if @question.errors.any? %>
    <% @question.errors.full_messages.each do |message| %>
      <p class = "mb-sm text-red"><%= message %></p>
    <% end %>
  <% end %>

  <%= render 'form', question: @question %>
</div>
